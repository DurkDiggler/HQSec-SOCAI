FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements-phase3.txt /app/requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/ /app/src/
COPY README.md /app/README.md

# Create data and logs directories
RUN mkdir -p /app/data /app/logs

# Set environment variables
ENV APP_HOST=0.0.0.0 APP_PORT=8000
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8000

# Run the application with auto-reload for development
CMD ["uvicorn", "src.soc_agent.webapp_phase3:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
