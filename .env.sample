# SOC Agent Configuration Sample
# Copy this file to .env and update with your values

# Database
DATABASE_URL=sqlite:///./soc_agent.db
# For PostgreSQL: DATABASE_URL=postgresql://soc_agent:soc_agent_password@postgres:5432/soc_agent

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8000"]
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
MAX_REQUEST_SIZE=1048576

# Feature Flags
ENABLE_EMAIL=true
ENABLE_AUTOTASK=true
ENABLE_METRICS=true
ENABLE_CACHING=true

# Email Configuration
SMTP_HOST=maildev
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=soc-agent@demo.local
EMAIL_TO=["soc@demo.local"]

# Autotask Integration (optional)
AT_BASE_URL=
AT_API_INTEGRATION_CODE=
AT_USERNAME=
AT_SECRET=
AT_ACCOUNT_ID=
AT_QUEUE_ID=

# Threat Intelligence APIs (optional)
OTX_API_KEY=
VT_API_KEY=
ABUSEIPDB_API_KEY=

# Webhook Security (optional)
WEBHOOK_SHARED_SECRET=
WEBHOOK_HMAC_SECRET=

# Database Passwords (for Docker)
POSTGRES_PASSWORD=soc_agent_password
REDIS_PASSWORD=redis_password
