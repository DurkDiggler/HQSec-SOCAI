# SOC Agent Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (for development)
DATABASE_URL=sqlite:///./soc_agent.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://soc_agent:password@localhost:5432/soc_agent
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=soc_agent
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DB=soc_agent

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS Origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Request Size Limit (bytes)
MAX_REQUEST_SIZE=1048576

# Webhook Authentication (optional)
# WEBHOOK_SHARED_SECRET=your_shared_secret
# WEBHOOK_HMAC_SECRET=your_hmac_secret
# WEBHOOK_HMAC_HEADER=X-Signature
# WEBHOOK_HMAC_PREFIX=sha256=

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
# Enable/Disable email notifications
ENABLE_EMAIL=true

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=soc-agent@yourcompany.com
EMAIL_TO=["soc@yourcompany.com"]

# =============================================================================
# AUTOTASK INTEGRATION
# =============================================================================
# Enable/Disable Autotask integration
ENABLE_AUTOTASK=true

# Autotask Configuration
AT_BASE_URL=https://your-instance.autotask.net
AT_API_INTEGRATION_CODE=your-integration-code
AT_USERNAME=your-username
AT_SECRET=your-secret
AT_ACCOUNT_ID=12345
AT_QUEUE_ID=67890
AT_TICKET_PRIORITY=3

# =============================================================================
# THREAT INTELLIGENCE APIs
# =============================================================================
# OTX (AlienVault Open Threat Exchange)
OTX_API_KEY=your-otx-api-key

# VirusTotal
VT_API_KEY=your-virustotal-api-key

# AbuseIPDB
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# =============================================================================
# SCORING CONFIGURATION
# =============================================================================
# Scoring thresholds (0-100)
SCORE_HIGH=70
SCORE_MEDIUM=40

# =============================================================================
# HTTP & CACHING
# =============================================================================
# HTTP timeout for external API calls
HTTP_TIMEOUT=8.0

# IOC cache TTL (seconds)
IOC_CACHE_TTL=1800

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable features
ENABLE_METRICS=true
ENABLE_CACHING=true

# =============================================================================
# MONITORING
# =============================================================================
# Metrics port
METRICS_PORT=9090

# Health check timeout
HEALTH_CHECK_TIMEOUT=5.0

# =============================================================================
# FRONTEND CONFIGURATION (for full stack)
# =============================================================================
# React app API URL
REACT_APP_API_URL=http://localhost:8000/api/v1

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker compose project name
COMPOSE_PROJECT_NAME=soc-agent

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (shows API docs)
# LOG_LEVEL=DEBUG

# Enable development features
# ENABLE_DEBUG=true
